{% extends "base.html.twig" %}

{% block title %}
	Le Blog de l'IA - Articles
{% endblock %}

{% block container %}
	<div class="container text-center mx-auto">
		<h1>Le Blog de l'IA</h1>
		<h2>
			<i>N'attendez pas Terminator pour vous y int√©resser !</i>
		</h2>

		{% for message in app.flashes('success') %}
			<div class="alert alert-success mt-4">
				{{ message }}
			</div>
		{% endfor %}

		<div class="">
			{% for post in posts %}
				<div class="card width: 18rem;">
					{% if post.thumbnail %}
						<a href="">
							<img src="{{ vich_uploader_asset(post.thumbnail, 'imageFile') }}" class="card-img-top" alt="{{ post.thumbnail.imageName }}">
						</a>
					{% endif %}

					<div class="card-body">
						<h5 class="card-title">{{ post.title }}</h5>
						<p class="card-text">{{ post.content|u.truncate(160, '...') }}</p>
						<p class="card-text">
							<small class="text-body-secondary">Il y a...</small>
						</p>
                        <a href="#" class="btn btn-primary">Lire la suite</a>
					</div>
				</div>
			{% endfor %}
		</div>

	</div>
